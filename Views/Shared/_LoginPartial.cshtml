    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
               
                @Html.ActionLink(User.Identity.Name + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" }) &nbsp;
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a> &nbsp;</li>
        </ul>
    }
}
